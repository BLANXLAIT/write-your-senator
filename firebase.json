{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/lookupSenators",
        "function": {
          "functionId": "lookupSenators",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/generateLetter",
        "function": {
          "functionId": "generateLetter",
          "region": "us-central1"
        }
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  }
}
